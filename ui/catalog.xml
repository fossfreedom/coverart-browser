<glade-catalog name="coverart_widgets" library="gladepython" domain="glade-3" 
               depends="gtk+" version="1.0">
  <init-function>glade_python_init</init-function>
  <glade-widget-classes>
    <glade-widget-class title="PopupButton" name="PopupButton" 
                        generic-name="PopupButton" parent="GtkButton">    
    <glade-widget-class title="SortPopupButton" name="SortPopupButton" 
                        generic-name="SortPopupButton" parent="GtkButton"
                        icon-name="widget-gtk-button"/>
    <glade-widget-class title="SortPopupButton" name="SortOrderButton" 
                        generic-name="SortPopupButton" parent="GtkButton"
                        icon-name="widget-gtk-button"/>
    <glade-widget-class title="DecadePopupButton" name="DecadePopupButton" 
                        generic-name="DecadePopupButton" parent="GtkButton"
                        icon-name="widget-gtk-button"/>
    <glade-widget-class title="RBSearchEntry" name="RBSearchEntry" 
                        generic-name="RBSearchEntry" parent="GtkHBox"
                        icon-name="widget-gtk-box"/>
  </glade-widget-classes>

   <glade-widget-group name="python" title="Python">
     <glade-widget-class-ref name="PopupButton"/>    
     <glade-widget-class-ref name="DecadePopupButton"/>
     <glade-widget-class-ref name="RBSearchEntry"/>
   </glade-widget-group>

</glade-catalog>
